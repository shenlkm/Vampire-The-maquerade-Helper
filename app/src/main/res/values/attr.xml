<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PointView">
        <attr name="state" format="integer">
            <flag name="empty" value="0" />
            <flag name="temporal" value="1" />
            <flag name="filled" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PointItemView">
        <attr name="pointLength" format="integer">
            <flag name="half" value="5" />
            <flag name="full" value="10" />
        </attr>
        <attr name="label" format="string"/>
        <attr name="equalWeight" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TitleView">
        <attr name="title" format="string"/>
    </declare-styleable>

</resources>