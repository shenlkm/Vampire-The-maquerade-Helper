<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VampireMasterHelper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#192C2C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#264343</item>
        <item name="colorSecondaryVariant">#437878</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/mrs_eaves_roman</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="backgroundColor">?attr/colorPrimary</item>
        <item name="editTextStyle">@style/as</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorControlActivated">?attr/colorOnPrimary</item>
        <item name="colorControlHighlight">?attr/colorOnPrimary</item>
    </style>

    <style name="as" parent="Widget.AppCompat.EditText">
        <item name="boxBackgroundColor">#264343FF</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorControlActivated">?attr/colorOnPrimary</item>
        <item name="colorControlHighlight">?attr/colorOnPrimary</item>
    </style>

</resources>