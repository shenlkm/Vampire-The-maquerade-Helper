<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="24dp">

    <View
        android:id="@+id/v_decorator_left"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_title_decorator_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_line_decorator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_decorator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_decorator_right"
        app:layout_constraintStart_toEndOf="@+id/v_decorator_left"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_decorator_right"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_title_decorator_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>