<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.vampiremasterhelper.views.TitleView
        android:id="@+id/tv_willpower_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:isSubtitle="true"
        app:title="Fuerza de Voluntad" />

    <com.example.vampiremasterhelper.views.PointItemView
        android:id="@+id/piv_willpower_permanent_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:equalWeight="true"
        app:layout_constraintTop_toBottomOf="@+id/tv_willpower_title"
        app:pointLength="full" />

    <LinearLayout
        android:id="@+id/ll_temp_point_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piv_willpower_permanent_points" />

</androidx.constraintlayout.widget.ConstraintLayout>