<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners
                android:topLeftRadius="50dp"
                android:topRightRadius="50dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <item
        android:gravity="center|top"
        android:left="0dp"
        android:top="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="#2e001f42" />
            <size
                android:width="40dp"
                android:height="4dp" />
        </shape>
    </item>

</layer-list>
